<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:id="@+id/linearlayoutmensajes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_linear_layout"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/textviewmensajes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nuevo mensaje"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textviewdatemensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/gris_claro"
            android:layout_gravity="bottom"/>

        <ImageView
            android:id="@+id/imageviewVisto"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_check_grey"
            android:layout_gravity="bottom"
            />


    </LinearLayout>
</RelativeLayout>
